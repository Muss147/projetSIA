        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">

        <link href="{{asset('assets/css/styles.css')}}" rel="stylesheet" type="text/css"/>
    </head>
    <body>
        <section class="bg-primary" style="height: 100vh;">
            <div class="container d-flex flex-column flex-center h-100">
                <div class="row w-75">
                    <div class="col-md-5 bg-lightgrey" style="background: #c3c3c3 url({{asset('assets/media/bg/auth-screens.png')}}) center / contain no-repeat;"></div>
                    <div class="col-md-7 d-flex flex-column justofy-content-evenly bg-white px-3 px-md-5 py-10 py-md-10">
                        <!--begin::Form-->
                        {{form_start(requestForm, {'attr': {'id': 'kt_password_reset_form', 'class': 'form w-100', 'novalidate': 'novalidate', 'data-kt-redirect-url': ''}})}}
                            <!--begin::Heading-->
                            <div
                                class="text-center mb-10">
                                <!--begin::Title-->
                                <h1 class="text-gray-900 fw-bolder mb-3">
                                    Mot de passe oublié ?
                                </h1>
                                <!--end::Title-->

                                <!--begin::Link-->
                                <div class="text-gray-500 fw-semibold fs-6">
                                    Saisissez votre adresse Email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                                </div>
                                <!--end::Link-->
                            </div>
                            <!--begin::Heading-->

                            {% for flash_error in app.flashes('reset_password_error') %}
                                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                            {% endfor %}

                            {% if form_errors(requestForm.email) %}
                                <div class="alert alert-danger" role="alert">
                                    {{ form_errors(requestForm.email) }}
                                </div>
                            {% endif %}

                            <!--begin::Input group-->
                            <div
                                class="fv-row mb-4 fv-plugins-icon-container">
                                <label class="fs-6 mb-2" for="reset_password_request_form_email">Email</label>
                                <!--begin::Email-->
                                {{ form_widget(requestForm.email, {'attr': {'class': 'form-control', 'placeholder': '', 'autocomplete': 'off'}}) }}
                            <!--end::Email-->
                            </div>

                            <!--begin::Submit button-->
							<div class="d-flex flex-wrap justify-content-center pb-lg-0">
                                <button
                                    type="submit" id="kt_password_reset_submit" class="btn btn-primary me-4 py-2">

                                    <!--begin::Indicator label-->
                                    <span class="indicator-label">
                                        Soumettre</span>
                                    <!--end::Indicator label-->

                                    <!--begin::Indicator progress-->
                                    <span class="indicator-progress">
                                        Veuillez patienter...
                                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                    </span>
                                    <!--end::Indicator progress-->
                                </button>

                                <a href="{{path('login')}}" class="btn btn-light">Retour</a>
                            </div>
                            <!--end::Submit button-->
                        {{ form_end(requestForm) }}
                        <!--end::Form-->
                    </div>
                </div>
            </div>
        </section>
        
