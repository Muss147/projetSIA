    <body>
        <div
            class="d-flex flex-column flex-root bg-primary-o" id="kt_app_root">
            
            <!--begin::Authentication - Signup Welcome Message -->
            <div
                class="d-flex flex-column flex-center flex-column-fluid">
                <!--begin::Content-->
                <div
                    class="d-flex flex-column flex-center p-10 h-lg-75">
                    <!--begin::Wrapper-->
                    <div class="card card-flush w-lg-950px h-100">
                        <div
                            class="card-body h-100 p-0">
                            
                            <div class="d-flex flex-column flex-column-fluid flex-lg-row rounded overflow-hidden h-100">
                                <div class="min-w-lg-350px bg-lightgrey" style="background: #c3c3c3 url({{asset('assets/media/bg/auth-screens.png')}}) center / contain no-repeat;"></div>
                                <div class="d-flex flex-column-fluid flex-lg-row-1 justify-content-center justify-content-lg-end">
                                    <div class="bg-body d-flex flex-column align-items-stretch flex-center w-100 p-20">
                                        <!--begin::Form-->
                                        {{form_start(requestForm, {'attr': {'id': 'kt_password_reset_form', 'class': 'form', 'novalidate': 'novalidate', 'data-kt-redirect-url': ''}})}}
                                            <!--begin::Heading-->
                                            <div
                                                class="text-center mb-11">
                                                <!--begin::Title-->
                                                <h1 class="text-gray-900 fw-bolder mb-3">
                                                    Mot de passe oublié ?
                                                </h1>
                                                <!--end::Title-->

                                                <!--begin::Link-->
                                                <div class="text-gray-500 fw-semibold fs-6">
                                                    Saisissez votre adresse Email et nous vous enverrons <br>un lien pour réinitialiser votre mot de passe.
                                                </div>
                                                <!--end::Link-->
                                            </div>
                                            <!--begin::Heading-->

                                            {% for flash_error in app.flashes('reset_password_error') %}
                                                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                                            {% endfor %}

                                            {% if form_errors(requestForm.email) %}
                                                <div class="alert alert-danger" role="alert">
                                                    {{ form_errors(requestForm.email) }}
                                                </div>
                                            {% endif %}

                                            <!--begin::Input group-->
                                            <div
                                                class="fv-row mb-8 fv-plugins-icon-container">
                                                <label class="fs-6 mb-2" for="reset_password_request_form_email">Email</label>
                                                <!--begin::Email-->
                                                {{ form_widget(requestForm.email, {'attr': {'class': 'form-control', 'placeholder': '', 'autocomplete': 'off'}}) }}
                                            <!--end::Email-->
                                            </div>

                                            <!--begin::Submit button-->
                                            <div class="d-flex flex-wrap justify-content-center pb-lg-0">
                                                <button
                                                    type="submit" id="kt_password_reset_submit" class="btn btn-primary me-4 py-2">

                                                    <!--begin::Indicator label-->
                                                    <span class="indicator-label">
                                                        Soumettre</span>
                                                    <!--end::Indicator label-->

                                                    <!--begin::Indicator progress-->
                                                    <span class="indicator-progress">
                                                        Veuillez patienter...
                                                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                                                    </span>
                                                    <!--end::Indicator progress-->
                                                </button>

                                                <a href="{{path('login')}}" class="btn btn-light">Retour</a>
                                            </div>
                                            <!--end::Submit button-->
                                        {{ form_end(requestForm) }}
                                        <!--end::Form-->
                                    </div>
                                </div>
                            </div>
