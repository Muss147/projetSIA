{# _prototype_devis_bpu.html.twig (le template de prototype) #}
<tr data-kt-element="item">
    <td class="pe-4">
        <span class="fw-bold text-primary" data-kt-element="hierarchie"></span>
        {{ form_widget(form.bpu, {'attr': {'class': 'form-select form-select-solid', 'placeholder': 'Sélectionner un BPU'}}) }}
    </td>
    <td class="ps-0">
        <div class="input-group flex-nowrap">
            {{ form_widget(form.quantite, {'attr': {'value': 1, 'class': 'form-control ps-0 w-50px text-end', 'placeholder': 'Quantité', 'data-kt-element': 'quantity', 'aria-label': 'Quantité', 'aria-describedby': 'basic-addon'}}) }}
            <span class="input-group-text p-2" data-kt-element="unity" id="basic-addon">?</span>
        </div>
    </td>
    <td class="pt-8 ps-0 text-end">
        <span data-kt-element="price">0.00</span>
    </td>
    <td class="pt-8 ps-0 text-end">
        <span data-kt-element="total">0.00</span>
    </td>
    <td class="pt-5 text-end">
        <button type="button" class="btn btn-sm btn-icon btn-active-color-primary" data-kt-element="remove-item">
            <i class="ki-duotone ki-trash fs-3"><span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span><span class="path5"></span></i>                            </button>                             
    </td>
</tr>