{# _prototype_devis_bpu.html.twig (le template de prototype) #}
<tr data-kt-element="item">
    <td class="pe-4">{{ form_widget(form.bpu, {'attr': {'class': 'form-select form-select-solid', 'placeholder': 'Sélectionner un BPU'}}) }}</td>
    <td class="ps-0">{{ form_widget(form.quantite, {'attr': {'class': 'form-control form-control-solid', 'placeholder': 'Quantité', 'data-kt-element': 'quantity'}}) }}</td>
    <td class="pt-8 ps-0 text-end">
        <span data-kt-element="price">0.00</span>
    </td>
    <td class="pt-8 ps-0 text-end">
