{% extends "layout.html.twig" %}

{% block title type|capitalize %}

{% block stylesheets %}
	<link href="{{asset('assets/plugins/custom/datatables/datatables.bundle.css')}}" rel="stylesheet" type="text/css"/>
{% endblock %}

{% block body %}
	<div
		class="d-flex flex-column flex-column-fluid">

		<!--begin::Toolbar-->
		<div
			id="kt_app_toolbar" class="app-toolbar  py-3 py-lg-6 ">

			<!--begin::Toolbar container-->
			<div
				id="kt_app_toolbar_container" class="app-container container-xxl">
				
				<div class="bg-primary-o h-150px rounded d-flex flex-stack p-5 p-md-10">
					<!--begin::Page title-->
					<div
						class="page-title d-flex flex-column justify-content-center flex-wrap me-3 ">
						<!--begin::Title-->
						<h1 class="page-heading d-flex text-gray-100 fw-bold fs-3 flex-column justify-content-center my-0">
							{{type}}
						</h1>
						<!--end::Title-->


						<!--begin::Breadcrumb-->
						<ul
							class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
							<!--begin::Item-->
							<li class="breadcrumb-item text-muted">
								<a href="{{path('acceuil')}}" class="text-muted text-hover-primary">
									Accueil
								</a>
							</li>
							<!--end::Item-->
							<!--begin::Item-->
							<li class="breadcrumb-item">
								<span class="bullet bg-gray-500 w-5px h-2px"></span>
							</li>
							<!--end::Item-->

							<!--begin::Item-->
							<li class="breadcrumb-item text-muted">
								App
							</li>
							<!--end::Item-->

							<!--begin::Item-->
							<li class="breadcrumb-item">
								<span class="bullet bg-gray-200 w-5px h-2px"></span>
							</li>
							<!--end::Item-->

							<!--begin::Item-->
							<li class="breadcrumb-item">
								Bordereau des Prix Unitaires
							</li>
							<!--end::Item-->
						</ul>
						<!--end::Breadcrumb-->
					</div>
					<!--end::Page title-->
				</div>
			</div>
			<!--end::Toolbar container-->
		</div>
		<!--end::Toolbar-->

		<!--begin::Content-->
		<div
			id="kt_app_content" class="app-content  flex-column-fluid ">


			<!--begin::Content container-->
			<div
				id="kt_app_content_container" class="app-container  container-xxl ">

				<!--begin::Category-->
				<div
					class="card card-flush">
					<!--begin::Card header-->
					<div
						class="card-header align-items-center py-5 gap-2 gap-md-5">
						<!--begin::Card title-->
						<div
							class="card-title">
							<!--begin::Search-->
							<div class="d-flex align-items-center position-relative my-1">
								<i class="ki-duotone ki-magnifier fs-3 position-absolute ms-4">
									<span class="path1"></span>
									<span class="path2"></span>
								</i>
								<input type="text" data-kt-ecommerce-category-filter="search" class="form-control form-control-solid w-250px ps-12" placeholder="Rechercher un(e) {{type}}"/>
							</div>
							<!--end::Search-->
						</div>
						<!--end::Card title-->

						<!--begin::Card toolbar-->
						<div
							class="card-toolbar">
							<!--begin::Add customer-->
							<button class="btn btn-light-primary" data-bs-toggle="modal" data-bs-target="#kt_modal_add_permission">
								<i class="ki-duotone ki-add-folder fs-3">
									<span class="path1"></span>
									<span class="path2"></span>
								</i>
								Ajouter un(e) {{type}}
							</button>
							<!--end::Add customer-->
						</div>
						<!--end::Card toolbar-->
					</div>
					<!--end::Card header-->

					<!--begin::Card body-->
					<div
						class="card-body pt-0">

						<!--begin::Table-->
						<table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_ecommerce_category_table">
							<thead>
								<tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
									<th class="w-10px pe-2">
										<div class="form-check form-check-sm form-check-custom form-check-solid me-3">
											<input class="form-check-input" type="checkbox" data-kt-check="true" data-kt-check-target="#kt_ecommerce_category_table .form-check-input" value="1"/>
										</div>
									</th>
									<th class="min-w-250px">{{type|capitalize}}</th>
									<th class="min-w-150px">Type</th>
									<th class="text-end min-w-70px">Actions</th>
								</tr>
							</thead>
							<tbody class="fw-semibold text-gray-600">
								{% for param in parametres|filter(p => p.type == type) %}
								<tr>
									<td>
										<div class="form-check form-check-sm form-check-custom form-check-solid">
											<input class="form-check-input" type="checkbox" value="{{param.id}}"/>
										</div>
									</td>
									<td>
										<div
											class="d-flex">
											<!--begin::Thumbnail-->
											<a href="" class="symbol symbol-50px">
												<span class="symbol-label">
													<i class="ki-duotone ki-folder fs-2">
														<span class="path1"></span>
														<span class="path2"></span>
													</i>
												</span>
											</a>
											<!--end::Thumbnail-->

											<div
												class="ms-5">
												<!--begin::Title-->
												<a href="" class="text-gray-800 text-hover-primary fs-5 fw-bold mb-1" data-kt-ecommerce-category-filter="category_name">{{param.libelle}}</a>
												<!--end::Title-->

												<!--begin::Description-->
												{{ param.description ? '<div class="text-muted fs-7 fw-bold">'~ param.description|raw ~'</div>' : '' }}
												<!--end::Description-->
											</div>
										</div>
									</td>
									<td>
										<!--begin::Badges-->
										<div class="badge badge-light-success">{{param.type}}</div>
										<!--end::Badges-->
									</td>
									<td class="text-end">
										<a href="#" class="btn btn-sm btn-light btn-active-light-primary btn-flex btn-center" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
											Actions
											<i class="ki-duotone ki-down fs-5 ms-1"></i>
										</a>
										<!--begin::Menu-->
										<div
											class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-125px py-4" data-kt-menu="true">
											<!--begin::Menu item-->
											<div class="menu-item px-3">
												<a href="" class="menu-link px-3">
													Modifier
												</a>
											</div>
											<!--end::Menu item-->

											<!--begin::Menu item-->
											<form class="menu-item px-3" method="post" action="{{ path('param_delete', {'id': param.id}) }}">
												<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ param.id) }}">
												<a href="#" class="menu-link px-3" data-kt-ecommerce-category-filter="delete_row">
													Supprimer
												</a>
											</form>
											<!--end::Menu item-->
										</div>
										<!--end::Menu-->
									</td>
								</tr>
								{% endfor %}
							</tbody>
							<!--end::Table body-->
						</table>
						<!--end::Table-->
					</div>
					<!--end::Card body-->
				</div>
				<!--end::Category-->
				<!--begin::Modals-->
				<!--begin::Modal - Add parametres-->
				<div
					class="modal fade" id="kt_modal_add_permission" tabindex="-1" aria-hidden="true"> <!--begin::Modal dialog-->
					<div
						class="modal-dialog modal-dialog-centered mw-650px">
						<!--begin::Modal content-->
						<div
							class="modal-content">
							<!--begin::Modal header-->
							<div
								class="modal-header">
								<!--begin::Modal title-->
								<h2 class="fw-bold">Ajout de {{type}}</h2>
								<!--end::Modal title-->

								<!--begin::Close-->
								<div class="btn btn-icon btn-sm btn-active-icon-primary" data-kt-parametres-modal-action="close">
									<i class="ki-duotone ki-cross fs-1">
										<span class="path1"></span>
										<span class="path2"></span>
									</i>
								</div>
								<!--end::Close-->
							</div>
							<!--end::Modal header-->

							<!--begin::Modal body-->
							<div
								class="modal-body scroll-y mx-5 mx-xl-15 my-7">
								<!--begin::Form-->
                                {{form_start(new_form, {'attr': {'id': 'kt_modal_add_permission_form', 'class': 'form'}})}}
									<!--begin::Input group-->
									<div
										class="fv-row mb-7">
										<!--begin::Label-->
										<label class="fs-6 fw-semibold form-label mb-2">
											<span class="required">Libellé</span>
										</label>
										<!--end::Label-->

										<!--begin::Input-->
                                        {{form_widget(new_form.libelle, {'attr': {'class': 'form-control form-control-solid', 'placeholder': 'Entrer un libellé'}})}}
									<!--end::Input-->
									</div>
									<!--end::Input group-->

									<!--begin::Input group-->
									<div
										class="fv-row mb-7">
										<!--begin::Label-->
										<label class="fs-6 fw-semibold form-label mb-2">Description</label>
										<!--end::Label-->

										<!--begin::Input-->
                                        {{form_widget(new_form.description, {'attr': {'class': 'form-control form-control-solid', 'placeholder': 'Entrer une description'}})}}
									<!--end::Input-->
									</div>
									<!--end::Input group-->

									<!--begin::Actions-->
									<div class="text-center pt-15">
										<button type="reset" class="btn btn-light me-3" data-kt-parametres-modal-action="cancel">
											Annuler
										</button>

										<button type="submit" class="btn btn-primary" data-kt-parametres-modal-action="submit">
											<span class="indicator-label">
												Soumettre
											</span>
											<span class="indicator-progress">
												Veuillez patienter...
												<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
											</span>
										</button>
									</div>
									<!--end::Actions-->
								{{form_end(new_form)}}
								<!--end::Form-->
							</div>
							<!--end::Modal body-->
						</div>
						<!--end::Modal content-->
					</div>
					<!--end::Modal dialog-->
				</div>
				<!--end::Modal - Add parametres-->
				<!--begin::Modal - Update parametres-->
				<div
					class="modal fade" id="kt_modal_update_permission" tabindex="-1" aria-hidden="true">
					<!--begin::Modal dialog-->
					<div
						class="modal-dialog modal-dialog-centered mw-650px">
						<!--begin::Modal content-->
						<div
							class="modal-content">
							<!--begin::Modal header-->
							<div
								class="modal-header">
								<!--begin::Modal title-->
								<h2 class="fw-bold">Modification de Permission</h2>
								<!--end::Modal title-->

								<!--begin::Close-->
								<div class="btn btn-icon btn-sm btn-active-icon-primary" data-kt-parametres-modal-action="close">
									<i class="ki-duotone ki-cross fs-1">
										<span class="path1"></span>
										<span class="path2"></span>
									</i>
								</div>
								<!--end::Close-->
							</div>
							<!--end::Modal header-->

							<!--begin::Modal body-->
							<div class="modal-body scroll-y mx-5 mx-xl-15 my-7">
								<!--begin::Form-->
								<form
									id="kt_modal_update_permission_form" class="form" action="" method="POST"> <!--begin::Input group-->
									<div
										class="fv-row mb-7">
										<!--begin::Label-->
										<label class="fs-6 fw-semibold form-label mb-2">
											<span class="required">Libellé</span>
										</label>
										<!--end::Label-->

										<!--begin::Input-->
										<input
											class="form-control form-control-solid" placeholder="Entrer le libellé de la permission" name="param_libelle"/>
										<input type="hidden" name="param_id">
									<!--end::Input-->
									</div>
									<!--end::Input group-->

									<div
										class="fv-row mb-7">
										<!--begin::Label-->
										<label class="fs-6 fw-semibold form-label mb-2">Description</label>
										<!--end::Label-->

										<!--begin::Input-->
										<input
											class="form-control form-control-solid" placeholder="Entrer une description" name="param_description"/>
									<!--end::Input-->
									</div>
									<!--end::Input group-->

									<!--begin::Actions-->
									<div class="text-center pt-15">
										<button type="reset" class="btn btn-light me-3" data-kt-parametres-modal-action="cancel">
											Annuler
										</button>

										<button type="submit" class="btn btn-primary" data-kt-parametres-modal-action="submit">
											<span class="indicator-label">
												Soumettre
											</span>
											<span class="indicator-progress">
												Veuillez patienter...
												<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
											</span>
										</button>
									</div>
									<!--end::Actions-->
								</form>
								<!--end::Form-->
							</div>
							<!--end::Modal body-->
						</div>
						<!--end::Modal content-->
					</div>
					<!--end::Modal dialog-->
				</div>
				<!--end::Modal - Update parametres-->
				<!--end::Modals-->
			</div>
			<!--end::Content container-->
		</div>
		<!--end::Content-->

	</div>
{% endblock %}

{% block javascripts %}
<script src="{{asset('assets/plugins/custom/datatables/datatables.bundle.js')}}"></script>
<script src="{{asset('assets/js/custom/apps/ecommerce/catalog/categories.js')}}"></script>

<script type="text/javascript">

	const parametres = {{ parametres|map(p => {
		id: p.id,
		libelle: p.libelle,
		enfants: p.enfants|map(enfant => {
			id: enfant.id,
			libelle: enfant.libelle
        })
	})|json_encode|raw }};

	const editModal = document.getElementById('kt_modal_update_permission');

	editModal.addEventListener('show.bs.modal', event => {
		const paramId = event.relatedTarget.attributes['data-bs-ident'].value;
		const permission = parametres.find(c => c.id == paramId);
		if (!permission) return;

		editModal.querySelector('input[name="permission_id"]').value = permission.id;
		editModal.querySelector('input[name="permission_libelle"]').value = permission.libelle;

		// Réinitialiser le repeater
		const repeaterList = $repeater.find('[data-repeater-list]');
		repeaterList.empty(); // Vide les items existants

		// Pré-remplir les actions
		const formattedActions = (permission.actions && permission.actions.length > 0) 
			? permission.actions.map(action => ({
				'id': action.id || '',
				'libelle': action.libelle || ''
			}))
			: {'libelle': ''};
		$repeater.setList(formattedActions);
	});

    {% for type, messages in app.flashes %}
        {% for message in messages %}
        Swal.fire({
            html: `{{message|raw}}`,
            icon: "{{type}}",
            buttonsStyling: false,
            confirmButtonText: "Ok, compris !",
            customClass: {
                confirmButton: "btn btn-primary"
            }
        });
        {% endfor %}
    {% endfor %}
</script>
{% endblock %}
